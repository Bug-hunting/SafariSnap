<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    tools:context=".Fragments.AboutFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/antic"
        android:gravity="center"
        android:text="Objective"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/antic"
        android:lineSpacingExtra="10sp"
        android:text="We are a team of students at the University of Texas at Arlington, we hope you enjoy our app on your adventures. Safari Snap uses a neural network based on TensorFlow to identify patterns, colors, and outlines of animals you would encounter at a zoo, on a hike, or at a safari park and give you information on them."
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/antic"
        android:text="Developed By : Ivan Ahumada, Joshua Burkey, Vaibhav khamesra and Phat Le"
        android:textSize="24sp" />

</LinearLayout>



